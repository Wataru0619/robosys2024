from collections import Counter
import sys

def main():
    text = sys.stdin.read().strip()

    if not text:
        print("No input", file=sys.stderr)
        exit(1)

    c = Counter(text)
    
    for char, count in c.items():
        print(f"{char}: {count}")

if __name__ == "__main__":
    main()
